{
    "name": "badinansoft/fib-php-sdk",
    "description": "FIB Online payments service PHP SDK",
    "keywords": [
        "badinansoft",
        "fib-php-sdk"
    ],
    "homepage": "https://github.com/badinansoft/fib-php-sdk",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Shahab Zebari",
            "email": "me@shahabzebari.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "psy/psysh": "@stable",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Badinansoft\\FIB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Badinansoft\\FIB\\": "src/"
        },
        "psr-4": {
            "Badinansoft\\FIB\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
